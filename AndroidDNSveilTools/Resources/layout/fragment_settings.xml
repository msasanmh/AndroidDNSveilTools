<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/msmh_Dark">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <LinearLayout
            android:id="@+id/linearLayout_Settings_BlockedDomain"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/msmh_15dp"
            android:paddingBottom="@dimen/msmh_15dp"
            android:background="@drawable/bg_rounded">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor"
                android:text="@string/settings_BlockedDomain"/>
            <TextView
                android:id="@+id/textView_Settings_BlockedDomain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/msmh_40dp"
                android:clickable="false"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor_Darker"
                android:text="@string/sample_text_multiline"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_Settings_TimeoutMS"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/msmh_15dp"
            android:paddingBottom="@dimen/msmh_15dp"
            android:background="@drawable/bg_rounded">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor"
                android:paddingRight="@dimen/msmh_10dp"
                android:text="@string/settings_TimeoutMS"/>
            <TextView
                android:id="@+id/textView_Settings_TimeoutMS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/msmh_40dp"
                android:clickable="false"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor_Darker"
                android:text="@string/empty"
                android:hint="@string/settings_TimeoutMS_Hint"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_Settings_AllowInsecure"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/msmh_10dp"
            android:paddingBottom="@dimen/msmh_10dp"
            android:background="@drawable/bg_rounded">
            <CheckBox
                android:id="@+id/checkBox_Settings_AllowInsecure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/msmh_Forecolor"
                android:clickable="false"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:text="@string/settings_AllowInsecure"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_Settings_DnsProviderUrls"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/msmh_15dp"
            android:paddingBottom="@dimen/msmh_15dp"
            android:background="@drawable/bg_rounded">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor"
                android:text="@string/settings_DnsProviders"/>
            <TextView
                android:id="@+id/textView_Settings_DnsProviderUrls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:minHeight="@dimen/msmh_100dp"
                android:maxHeight="@dimen/msmh_200dp"
                android:clickable="false"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor_Darker"
                android:text="@string/sample_text_multiline"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/msmh_Line"
            android:layout_marginTop="@dimen/msmh_Margin_Half"
            android:layout_marginBottom="@dimen/msmh_Margin_Half"
            android:background="@android:color/black"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded">
            <Button
                android:id="@+id/button_Settings_ResetSettingsToDefaults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:text="@string/settings_ResetSettingsToDefaults"
                android:textAllCaps="false"
                android:textColor="@color/msmh_Darker"
                android:textStyle="bold"
                android:backgroundTint="@color/msmh_IndianRed"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>