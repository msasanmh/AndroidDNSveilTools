<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_DnsLookup_MainContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/msmh_Dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_rounded">
        <LinearLayout
            android:id="@+id/linearLayout_DnsLookup_DnsAddress"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/msmh_15dp"
            android:paddingBottom="@dimen/msmh_15dp"
            android:background="@drawable/bg_rounded_nopad">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor"
                android:paddingRight="@dimen/msmh_10dp"
                android:text="@string/dnslookup_DnsAddress"/>
            <TextView
                android:id="@+id/textView_DnsLookup_DnsAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/msmh_50dp"
                android:clickable="false"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor_Darker"
                android:text="@string/sample_text_multiline"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout_DnsLookup_Domain"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/msmh_15dp"
            android:paddingBottom="@dimen/msmh_15dp"
            android:background="@drawable/bg_rounded_nopad">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor"
                android:paddingRight="@dimen/msmh_10dp"
                android:text="@string/dnslookup_Domain"/>
            <TextView
                android:id="@+id/textView_DnsLookup_Domain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/msmh_40dp"
                android:clickable="false"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor_Darker"
                android:text="@string/sample_text_multiline"/>
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/msmh_10dp"
            android:paddingBottom="@dimen/msmh_10dp">
            <TextView
                android:id="@+id/textView_DnsLookupLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/msmh_10dp"
                android:layout_weight="@dimen/msmh_0dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor"
                android:text="@string/dnslookup_RRTYPE"/>
            <Spinner
                android:id="@+id/spinner_DnsLookup_RRTYPE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor"
                android:layout_weight="@dimen/msmh_1dp"
                android:layout_toRightOf="@id/textView_DnsLookupLeft"
                android:layout_toLeftOf="@id/checkBox_DnsLookup_AllowInsecure"
                android:layout_centerInParent="true"
                android:spinnerMode="dialog"/>
            <CheckBox
                android:id="@+id/checkBox_DnsLookup_AllowInsecure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor"
                android:layout_weight="@dimen/msmh_0dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="@string/dnslookup_AllowInsecure"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_rounded">
        <Button
            android:id="@+id/button_DnsLookup_Lookup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/msmh_FontSize_Medium"
            android:text="@string/dnslookup_Lookup"
            android:textAllCaps="false"
            android:textColor="@color/msmh_Darker"
            android:textStyle="bold"
            android:backgroundTint="@color/msmh_MediumSeaGreen"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView_DnsLookup_Info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rounded">
        <LinearLayout
            android:id="@+id/linearLayout_DnsLookup_Info"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <!--// Log Window //-->
            <TextView
                android:id="@+id/textView_DnsLookup_Info"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:focusable="true"
                android:cursorVisible="false"
                android:editable="false"
                android:textSize="@dimen/msmh_FontSize_Medium"
                android:textColor="@color/msmh_Forecolor_Darker"
                android:text="@string/empty"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>